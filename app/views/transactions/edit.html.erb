<h1>Editing Transaction</h1>

<!-- Passing :transaction is the same as passing @transaction
This first argument is auto-populated in the fields of the form -->
<%= form_for :transaction, url: transaction_path(@transaction), method: :patch do |f| %>

  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@transaction.errors.count, "error") %> prohibited this
        transaction from being saved:
      </h2>
      <ul>
        <% @transaction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :label %><br>
    <%= f.text_field :label %>
  </p>

  <p>
    <%= f.label :amount %><br>
    <%= f.text_area :amount %>
  </p>

  <p>
    <%= f.collection_radio_buttons :withdrawal, [[true, 'withdrawal'] ,[false, 'deposit']],:first, :last %>
  </p>

  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<button type="button" class="btn btn-default">
<%= link_to 'Back', transactions_path %>
</button>
